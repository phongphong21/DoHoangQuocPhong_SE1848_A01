<Window x:Class="DoHoangQuocPhongWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoHoangQuocPhongWPF"
        mc:Ignorable="d"
        Title="DoHoangQuocPhong - SE182291 - Login" Height="490" Width="450" WindowStartupLocation="CenterScreen"
        Background="#f0f2f5">
    <Border Background="White" CornerRadius="10" Padding="20" Margin="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="🔐 User Login" FontSize="22" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0" Foreground="#2c3e50"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="Login as:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <RadioButton x:Name="rdoAdmin" Content="Employee" IsChecked="True" Margin="5"/>
                <RadioButton Content="Customer" Margin="5"/>
            </StackPanel>

            <Label Content="Username / Phone:" Grid.Row="2" Margin="5,0,0,0"/>
            <TextBox x:Name="txtUsername" Grid.Row="3" Margin="0,5" Height="30"/>

            <Label Content="Password (Employee only):" Grid.Row="4" Margin="5,10,0,0"/>
            <PasswordBox x:Name="txtPassword" Grid.Row="5" Margin="0,5" Height="30"/>

            <Button x:Name="btnLogin" Content="Login" Grid.Row="6" Height="35" Margin="0,15,0,5" 
                    Background="#3498db" Foreground="White" FontWeight="Bold"
                    Click="btnLogin_Click"/>

            <Button x:Name="btnExit" Content="Exit" Grid.Row="7" Height="35" Margin="0,5,0,0"
                    Background="#c0392b" Foreground="White" FontWeight="Bold"
                    Click="btnExit_Click"/>
        </Grid>
    </Border>
</Window>