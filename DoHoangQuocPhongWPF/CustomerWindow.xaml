<Window x:Class="DoHoangQuocPhongWPF.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoHoangQuocPhongWPF"
        mc:Ignorable="d"
        Title="DoHoangQuocPhong-SE182291-Customer Management" Height="520" Width="880" WindowStartupLocation="CenterScreen"
        Background="#f0f2f5">
    <Border Margin="20" Background="White" CornerRadius="10" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Customer Management" FontSize="22" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#2c3e50"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBox x:Name="txtSearch" Width="500" Height="30" Margin="5"/>
                <Button x:Name="btnSearch" Content="Search" Width="90" Height="30" Margin="5" Click="btnSearch_Click"/>
                <Button x:Name="btnReset" Content="Reset" Width="90" Height="30" Margin="5" Click="btnReset_Click"/>
            </StackPanel>

            <DataGrid x:Name="dgCustomers" Grid.Row="2" SelectionMode="Single" AutoGenerateColumns="False" 
                      CanUserAddRows="False" Margin="0,0,0,15" Height="280">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerId}" Width="120"/>
                    <DataGridTextColumn Header="Company Name" Binding="{Binding CompanyName}" Width="180"/>
                    <DataGridTextColumn Header="Contact Name" Binding="{Binding ContactName}" Width="140"/>
                    <DataGridTextColumn Header="Contact Title" Binding="{Binding ContactTitle}" Width="140"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="180"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnAdd" Content="Add" Width="90" Margin="5" Click="btnAdd_Click" Background="#2ecc71" Foreground="White"/>
                <Button x:Name="btnUpdate" Content="Update" Width="90" Margin="5" Click="btnUpdate_Click" Background="#3498db" Foreground="White"/>
                <Button x:Name="btnDelete" Content="Delete" Width="90" Margin="5" Click="btnDelete_Click" Background="#e67e22" Foreground="White"/>
                <Button x:Name="btnBack" Content="Back" Width="90" Margin="5" Click="btnBack_Click" Background="#c0392b" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
