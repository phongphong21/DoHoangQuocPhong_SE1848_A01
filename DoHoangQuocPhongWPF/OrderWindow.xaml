<Window x:Class="DoHoangQuocPhongWPF.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoHoangQuocPhongWPF"
        mc:Ignorable="d"
        Title="DoHoangQuocPhong - SE182291 - Order Management" Height="600" Width="880" WindowStartupLocation="CenterScreen"
        Background="#f0f2f5">
    <Border Margin="20" Background="White" CornerRadius="10" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" HorizontalAlignment="Center">
                <TextBlock Text="🔎 Search by Customer Name:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                <TextBox x:Name="txtsearch" Width="400" Height="28" Margin="0,0,10,0"/>
                <Button Content="Search" Width="90" Height="28" x:Name="btnSearch" Click="btnSearch_Click"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="dgOrders" Grid.Row="0" AutoGenerateColumns="False" 
                          SelectionChanged="dgOrders_SelectionChanged" Margin="0,0,0,5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="100"/>
                        <DataGridTextColumn Header="Customer" Binding="{Binding Customer.ContactName}" Width="200"/>
                        <DataGridTextColumn Header="Employee" Binding="{Binding Employee.Name}" Width="200"/>
                        <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>

                <GroupBox Header="📋 Order Details" Grid.Row="1" FontWeight="Bold" Foreground="#2c3e50">
                    <DataGrid IsReadOnly="True" x:Name="dgOrderDetail" AutoGenerateColumns="False" Margin="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" Binding="{Binding Product.ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="100"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                            <DataGridTextColumn Header="Discount" Binding="{Binding Discount}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="Add" Content="Add" Width="90" Margin="5" Click="Add_Click" Background="#2ecc71" Foreground="White"/>
                <Button x:Name="Edit" Content="Edit" Width="90" Margin="5" Click="Edit_Click" Background="#3498db" Foreground="White"/>
                <Button x:Name="Delete" Content="Delete" Width="90" Margin="5" Click="Delete_Click" Background="#e67e22" Foreground="White"/>
                <Button x:Name="btnBack" Content="Back" Width="90" Margin="5" Click="btnBack_Click" Background="#c0392b" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
