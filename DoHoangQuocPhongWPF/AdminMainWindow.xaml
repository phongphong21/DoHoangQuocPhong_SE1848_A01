<Window x:Class="DoHoangQuocPhongWPF.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoHoangQuocPhongWPF"
        mc:Ignorable="d"
        Title="DoHoangQuocPhong-SE182291-AdminMainWindow" Height="500" Width="850" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2c3e50" Padding="15" CornerRadius="10">
            <TextBlock Text="Admin Dashboard"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" CornerRadius="10" Background="White" Padding="30" Margin="0,20,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
                <Button x:Name="btnCustomer" Content="👤 Manage Customers" Height="40" FontSize="16"
                Click="btnCustomer_Click" Background="#3498db" Foreground="White" Margin="0,5"/>
                <Button x:Name="btnProduct" Content="📦 Manage Products" Height="40" FontSize="16"
                Click="btnProduct_Click" Background="#27ae60" Foreground="White" Margin="0,5"/>
                <Button x:Name="btnOrder" Content="🧾 Manage Orders" Height="40" FontSize="16"
                Click="btnOrder_Click" Background="#8e44ad" Foreground="White" Margin="0,5"/>
                <Button x:Name="btnReport" Content="📊 Reports" Height="40" FontSize="16"
                Click="btnReport_Click" Background="#e67e22" Foreground="White" Margin="0,5"/>
                <Separator Margin="0,10"/>
                <Button x:Name="btnLogout" Content="🚪 Logout" Height="40" FontSize="16"
                Click="btnLogout_Click" Background="#c0392b" Foreground="White" Margin="0,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
