<Window x:Class="DoHoangQuocPhongWPF.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoHoangQuocPhongWPF"
        mc:Ignorable="d"
        Title="DoHoangQuocPhong - SE182291 - Product Editor" Height="520" Width="500"
        WindowStartupLocation="CenterScreen" Background="#f5f5f5">
    <Border Background="White" CornerRadius="10" Padding="20" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="🛒 Product Information" FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#2c3e50"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Product Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtProductName" Grid.Row="0" Grid.Column="1" Margin="5"/>

                <Label Content="Supplier:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtSupplier" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <Label Content="Category:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtCategory" Grid.Row="2" Grid.Column="1" Margin="5"/>

                <Label Content="Quantity/Unit:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtQuantity" Grid.Row="3" Grid.Column="1" Margin="5"/>

                <Label Content="Unit Price:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtUnitPrice" Grid.Row="4" Grid.Column="1" Margin="5"/>

                <Label Content="Stock:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtStock" Grid.Row="5" Grid.Column="1" Margin="5"/>

                <Label Content="On Order:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtOnOrder" Grid.Row="6" Grid.Column="1" Margin="5"/>

                <Label Content="Reorder Level:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtReorder" Grid.Row="7" Grid.Column="1" Margin="5"/>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="btnSave" Content="Save" Width="100" Margin="10,0" FontSize="15" Click="btnSave_Click"
                        Background="#27ae60" Foreground="White"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="100" Margin="10,0" FontSize="15" Click="btnCancel_Click"
                        Background="#c0392b" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
