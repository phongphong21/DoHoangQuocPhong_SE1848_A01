<Window x:Class="DoHoangQuocPhongWPF.CustomerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoHoangQuocPhongWPF"
        mc:Ignorable="d"
        Title="DoHoangQuocPhong-SE182291-CustomerMainWindow" Height="500" Width="880" WindowStartupLocation="CenterScreen" Background="#f5f6fa">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.6*"/>
            <ColumnDefinition Width="2.4*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="10" Padding="15" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="👤 Your Profile" FontWeight="Bold" FontSize="18"
                           Margin="0,0,0,15" HorizontalAlignment="Center" Foreground="#2c3e50"/>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Company Name:" Margin="0,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtCompanyName" Margin="5"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Contact Name:" Margin="0,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtContactName" Margin="5"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Contact Title:" Margin="0,5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtContactTitle" Margin="5"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Address:" Margin="0,5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtAddress" Margin="5"/>

                    <Label Grid.Row="4" Grid.Column="0" Content="Phone:" Margin="0,5"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtPhone" Margin="5" IsReadOnly="True"/>
                </Grid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnUpdateProfile" Content="Update Profile" Width="120" Margin="10,0" Click="btnUpdateProfile_Click"
                            Background="#27ae60" Foreground="White"/>
                    <Button x:Name="btnLogout" Content="Logout" Width="80" Margin="10,0" Click="btnLogout_Click"
                            Background="#c0392b" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Order History Section -->
        <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="📦 Your Orders" FontWeight="Bold" FontSize="18" 
                           HorizontalAlignment="Center" Margin="0,0,0,15" Foreground="#2c3e50"/>

                <ListView x:Name="lvOrders" Grid.Row="1" HorizontalAlignment="Stretch" SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Order ID" DisplayMemberBinding="{Binding OrderId}" Width="100"/>
                            <GridViewColumn Header="Order Date" DisplayMemberBinding="{Binding OrderDate}" Width="180"/>
                            <GridViewColumn Header="Employee Name" DisplayMemberBinding="{Binding Employee.Name}" Width="180"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Window>
